@using Nethereum.Hex.HexConvertors.Extensions;

@model Nethereum.AspNetSample.ViewModels.FaucetViewModel
@{

    ViewData["Title"] = "Home Page";
}

    <div class="jumbotron">
        <div class="row">
            <h1>Ethereum Faucet Asp.Net Classic</h1>
            <div class="jumbotron">
                <p class="lead">Please enter the account address to be funded with 10 ether</p>
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Address:</label>
                        <div class="input-group">
                            <div class="input-group-addon">0x</div>
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "address", @id = "address", @size = 60 })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary ">Fund account</button>
                }
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @if (Model != null && !String.IsNullOrEmpty(Model.TransactionHash))
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Fund Account transaction request</h2>
                    </div>
                    <div class="panel-body">
                        <table class="table-striped">
                            <tbody>
                                <tr>
                                    <th>Account Address:</th>
                                    <td>@Model.Address</td>
                                </tr>
                                <tr>
                                    <th>Transaction</th>
                                    <td>@Model.TransactionHash.EnsureHexPrefix()</td>
                                </tr>
                                <tr>
                                    <th>Amount</th>
                                    <td>@Model.Amount</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            }

        </div>

    </div>
